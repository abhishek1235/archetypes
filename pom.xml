<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.backbase.expert.tools</groupId>
    <artifactId>archetypes</artifactId>
    <version>5.3.1.1-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>Backbase Expert Services Archetypes</name>
    <description>A collection of Maven archetypes for Backbase Portal created by Expert Services that can help help with initial project setup.</description>
    <url>http://www.backbase.com</url>

    <properties>
        <!-- Standard Maven settings -->
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <maven.resources.escapeString>\</maven.resources.escapeString>
        <maven.resources.includeEmptyDirs>true</maven.resources.includeEmptyDirs>
        
        <!-- Backbase dependency versions -->
        <portal.dashboard.version>5.3.1.1</portal.dashboard.version>
        <portal.server.version>5.3.1.1</portal.server.version>
        <portal.client.version>5.2.0.0</portal.client.version>
        <contentservices.version>5.3.0.0</contentservices.version>
        <orchestrator.version>5.3.1.0</orchestrator.version>
        
        <!-- Third party dependency versions -->
        <springframework.version>3.1.0.RELEASE</springframework.version>
        <c3p0.version>0.9.1.2</c3p0.version>
        <h2.version>1.3.154</h2.version>
        <javax.mail.version>1.4.3</javax.mail.version>
        <jetty.plugin.version>7.6.4.v20120524</jetty.plugin.version>
        <tomcat.plugin.version>2.1-SNAPSHOT</tomcat.plugin.version>
        <junit.version>4.8.2</junit.version>
        <groovy.version>1.8.0</groovy.version>
        <port>8080</port>
        <java.target.version>1.6</java.target.version>
    </properties>

    <repositories>
        <repository>
            <id>repo.backbase.com</id>
            <url>https://repo.backbase.com/repo/</url>
        </repository>
    </repositories>

    <distributionManagement>
         <repository>
            <id>repo.backbase.com</id>
            <name>repo.backbase.com-releases</name>
            <url>https://repo.backbase.com//expert-release-local</url>
        </repository>
        <snapshotRepository>
            <id>repo.backbase.com</id>
            <name>repo.backbase.com-snapshots</name>
            <url>https://repo.backbase.com//expert-snapshot-local</url>
        </snapshotRepository>
    </distributionManagement>

    <developers>
        <developer>
            <email>marko@backbase.com</email>
            <name>Marko Dragoljevic</name>
            <url>https://github.com/chipi</url>
        </developer>
    </developers>

    <scm>
        <connection>scm:git:git@github.com:Backbase-Expert-Services/archetypes.git</connection>
        <developerConnection>scm:git:git@github.com:Backbase-Expert-Services/archetypes.git</developerConnection>
        <url>https://github.com/Backbase-Expert-Services/archetypes</url>
    </scm>

    <modules>
        <module>backbase-portal-archetype-all-in-one</module>
    </modules>

     <build>
        <plugins>
            <!-- Do a mvn release:prepare and a mvn release:perform if you want to release -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <configuration>
                    <!-- During release:perform, enable the "release" profile -->
                    <releaseProfiles>release</releaseProfiles>
                    <goals>deploy</goals>
                </configuration>
            </plugin>
        </plugins>

        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-archetype-plugin</artifactId>
                    <version>2.1</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-release-plugin</artifactId>
                    <version>2.4</version>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

    <profiles>
        <profile>
            <id>report</id>
            <reporting>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-project-info-reports-plugin</artifactId>
                        <version>2.4</version>
                    </plugin>
                </plugins>
            </reporting>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-site-plugin</artifactId>
                        <version>3.1</version>
                        <configuration>
                            <skipDeploy>true</skipDeploy>
                            <reportPlugins>
                                <plugin>
                                    <groupId>org.apache.maven.plugins</groupId>
                                    <artifactId>maven-project-info-reports-plugin</artifactId>
                                    <version>2.2</version>
                                    <configuration>
                                        <dependencyDetailsEnabled>true</dependencyDetailsEnabled>
                                        <dependencyLocationsEnabled>true</dependencyLocationsEnabled>
                                    </configuration>
                                </plugin>
                                <plugin>
                                    <groupId>org.apache.maven.plugins</groupId>
                                    <artifactId>maven-javadoc-plugin</artifactId>
                                    <version>2.7</version>
                                    <reportSets>
                                        <reportSet>
                                            <id>default</id>
                                            <reports>
                                                <report>javadoc</report>
                                            </reports>
                                        </reportSet>
                                    </reportSets>
                                </plugin>
                                <plugin>
                                    <groupId>org.apache.maven.plugins</groupId>
                                    <artifactId>maven-surefire-report-plugin</artifactId>
                                    <version>2.6</version>
                                </plugin>
                            </reportPlugins>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>com.github.github</groupId>
                        <artifactId>site-maven-plugin</artifactId>
                        <version>0.7</version>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>site</goal>
                                </goals>
                                <phase>site-deploy</phase>
                                <configuration>
                                    <!-- For reasons of traceability, we use ${project.version} to distinguish versions -->
                                    <path>${project.version}</path>
                                    <merge>true</merge>
                                    <message>Creating site for ${project.version}</message>
                                    <server>github</server>
                                    <repositoryName>archetypes</repositoryName>
                                    <repositoryOwner>Backbase</repositoryOwner>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>release</id>
        </profile>
    </profiles>
</project>
