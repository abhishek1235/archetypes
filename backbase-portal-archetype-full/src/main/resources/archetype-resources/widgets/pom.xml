<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="
	http://maven.apache.org/POM/4.0.0
	http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>ch.postfinance.fipo</groupId>
    <artifactId>fipo-parent</artifactId>
    <version>1.0-SNAPSHOT</version>
  </parent>

  <artifactId>widgets</artifactId>
  <packaging>pom</packaging>

  <name>Finanzportal Widgets</name>
  <description>Finanzportal Widgets POM</description>

  <properties>
    <work.dir>${project.build.directory}/${project.build.finalName}</work.dir>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    <widgets.zip.name>fipo-widgets</widgets.zip.name>
  </properties>

  <build>
    <finalName>${widgets.zip.name}</finalName>
    <pluginManagement>
      <plugins>
        <!-- Build plugins -->
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-resources-plugin</artifactId>
          <version>2.5</version>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-assembly-plugin</artifactId>
          <version>2.3</version>
        </plugin>
        <plugin>
          <groupId>org.mortbay.jetty</groupId>
          <artifactId>maven-jetty-plugin</artifactId>
          <version>6.1.26</version>
        </plugin>
      </plugins>
    </pluginManagement>
    <!-- Core Portal Plugins -->
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-resources-plugin</artifactId>
        <executions>
          <execution>
            <id>filter</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <encoding>UTF-8</encoding>
              <outputDirectory>${work.dir}</outputDirectory>
              <resources>
                <resource>
                  <directory>src/main/webapp</directory>
                  <filtering>true</filtering>
                </resource>
              </resources>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>net.alchim31.maven</groupId>
        <artifactId>yuicompressor-maven-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>compress</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <suffix>.min</suffix>
          <aggregations>
            <aggregation>
              <insertNewLine>true</insertNewLine>
              <output>${project.build.directory}/${project.build.finalName}/static/ch.postfinance.fipo/css/widgets.min.css</output>
              <includes>
                <include>${project.build.directory}/${project.build.finalName}/static/ch.postfinance.fipo/widgets/assets/css/style.min.css</include>
                <include>${project.build.directory}/${project.build.finalName}/static/ch.postfinance.fipo/widgets/idealcomplements/css/style.min.css</include>
              </includes>
            </aggregation>
            <aggregation>
              <insertNewLine>true</insertNewLine>
              <output>${project.build.directory}/${project.build.finalName}/static/ch.postfinance.fipo/scripts/widgets.min.js</output>
              <includes>
                <include>${project.build.directory}/${project.build.finalName}/static/ch.postfinance.fipo/widgets/assets/js/script.min.js</include>
                <include>${project.build.directory}/${project.build.finalName}/static/ch.postfinance.fipo/widgets/content/js/script.min.js</include>
                <include>${project.build.directory}/${project.build.finalName}/static/ch.postfinance.fipo/widgets/customerservice/js/script.min.js</include>
                <include>${project.build.directory}/${project.build.finalName}/static/ch.postfinance.fipo/widgets/flex-iframe/js/script.min.js</include>
                <include>${project.build.directory}/${project.build.finalName}/static/ch.postfinance.fipo/widgets/idealcomplements/js/script.min.js</include>
                <include>${project.build.directory}/${project.build.finalName}/static/ch.postfinance.fipo/widgets/latestnews/js/script.min.js</include>
                <include>${project.build.directory}/${project.build.finalName}/static/ch.postfinance.fipo/widgets/navigation/js/script.min.js</include>
                <include>${project.build.directory}/${project.build.finalName}/static/ch.postfinance.fipo/widgets/payments/js/script.min.js</include>
                <include>${project.build.directory}/${project.build.finalName}/static/ch.postfinance.fipo/widgets/readon/js/script.min.js</include>
                <include>${project.build.directory}/${project.build.finalName}/static/ch.postfinance.fipo/widgets/teaser/js/script.min.js</include>
              </includes>
            </aggregation>
          </aggregations>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <configuration>
          <descriptors>
            <descriptor>src/main/assembly/zip.xml</descriptor>
          </descriptors>
        </configuration>
        <executions>
          <execution>
            <id>make-assembly</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>