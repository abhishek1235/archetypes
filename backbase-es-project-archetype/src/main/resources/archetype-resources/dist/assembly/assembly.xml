<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

    <id>dist</id>

    <formats>
        <format>zip</format>
    </formats>

    <files>
        <!-- Portal server -->
        <file>
            <source>\${portal.dir}/target/portal.war</source>
            <outputDirectory>/wars</outputDirectory>
        </file>

        <!-- Orchestrator -->
        <file>
            <source>\${orchestrator.dir}/target/orchestrator.war</source>
            <outputDirectory>/wars</outputDirectory>
        </file>

        <!-- Content service -->
        <file>
            <source>\${contentservices.dir}/target/contentservices.war</source>
            <outputDirectory>/wars</outputDirectory>
        </file>

        <!-- Statics -->
        <file>
            <source>\${statics.dir}/sample.backbase.bundle/target/sample.backbase.bundle-bundle.zip</source>
            <outputDirectory>/statics</outputDirectory>
        </file>
    </files>

    <fileSets>
        <!-- Copy configuration -->
        <fileSet>
            <directory>\${configuration.dir}</directory>
            <outputDirectory>/configuration</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>

        <!-- Copy release notes -->
        <fileSet>
            <directory>\${project.basedir}/release-notes</directory>
            <outputDirectory>/release-notes</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>