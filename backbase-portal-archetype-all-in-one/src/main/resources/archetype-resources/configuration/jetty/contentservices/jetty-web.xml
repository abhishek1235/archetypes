<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Configure PUBLIC "-//Jetty//Configure//EN" "http://www.eclipse.org/jetty/configure.dtd">
<Configure id="contentservices-webapp" class="org.eclipse.jetty.webapp.WebAppContext">
    <New id="configurationDS" class="org.eclipse.jetty.plus.jndi.Resource">
        <Arg>jdbc/configuration-datasource</Arg>
        <Arg>
            <New class="com.mchange.v2.c3p0.ComboPooledDataSource">
                <Set name="driverClass">org.h2.Driver</Set>
                <Set name="jdbcUrl">jdbc:h2:file:\${project.basedir}/data/contentServicesConfiguration;MVCC=TRUE;DB_CLOSE_ON_EXIT=FALSE</Set>
                <Set name="user">sa</Set>
                <Set name="password"></Set>
            </New>
        </Arg>
    </New>

    <New id="contentDS" class="org.eclipse.jetty.plus.jndi.Resource">
        <Arg>jdbc/content-datasource</Arg>
        <Arg>
            <New class="com.mchange.v2.c3p0.ComboPooledDataSource">
                <Set name="driverClass">org.h2.Driver</Set>
                <Set name="jdbcUrl">jdbc:h2:file:\${project.basedir}/data/contentServicesContent;MVCC=TRUE;DB_CLOSE_ON_EXIT=FALSE</Set>
                <Set name="user">sa</Set>
                <Set name="password"></Set>
            </New>
        </Arg>
    </New>

    <New id="resourceDS" class="org.eclipse.jetty.plus.jndi.Resource">
        <Arg>jdbc/resource-datasource</Arg>
        <Arg>
            <New class="com.mchange.v2.c3p0.ComboPooledDataSource">
                <Set name="driverClass">org.h2.Driver</Set>
                <Set name="jdbcUrl">jdbc:h2:file:\${project.basedir}/data/contentServicesResource;MVCC=TRUE;DB_CLOSE_ON_EXIT=FALSE</Set>
                <Set name="user">sa</Set>
                <Set name="password"></Set>
            </New>
        </Arg>
    </New>

    <New id="portalConfigLocation" class="org.eclipse.jetty.plus.jndi.EnvEntry">
        <Arg></Arg>
        <Arg>backbase/config</Arg>
        <Arg type="java.lang.String">\${project.build.testOutputDirectory}/configuration/backbase.properties</Arg>
        <Arg type="boolean">false</Arg>
    </New>
</Configure>