<widget>
    <name>widget-notifications</name>
    <contextItemName>[BBHOST]</contextItemName>
    <extendedItemName>widget-launchpad-base</extendedItemName>
    <properties>
        <property name="src">
            <value type="string">$(contextRoot)/static/launchpad/widgets/notifications/index.html</value>
        </property>
        <property name="title" viewHint="user,designModeOnly">
            <value type="string">Notifications</value>
        </property>
        <property name="thumbnailUrl">
            <value type="string">$(contextRoot)/static/launchpad/widgets/notifications/icon.png</value>
        </property>

        <!-- Widget specific prefs -->
        <property name="messageSrc" label="Message source">
            <value type="string">$(contextPath)/static/launchpad/conf/messages.json</value>
        </property>
        <property name="notificationsEndpoint" label="Notifications endpoint" viewHint="text-input,admin,designModeOnly">
            <value type="string">$(contextPath)/services/rest/contact-dialogues/messages</value>
        </property>
        <property name="closeNotificationEndpoint" label="Close notification endpoint" viewHint="text-input,admin,designModeOnly">
            <value type="string">$(contextPath)/services/rest/contact-dialogues/messages/$(id)/deactivate</value>
        </property>
        <property name="pollInterval" viewHint="user,designModeOnly" label="Poll for new messages every...">
            <value type="double">-1</value>
        </property>
        <property name="allowPubsub" viewHint="user,designModeOnly" label="Receive messages from the pubsub channel">
            <value type="boolean">true</value>
        </property>
    </properties>
    <tags>
        <tag type="regular">universal</tag>
        <tag type="section">launchpad</tag>
    </tags>
    <securityProfile>ADMIN</securityProfile>
</widget>