<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="
    http://maven.apache.org/POM/4.0.0
    http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>\${groupId}</groupId>
        <artifactId>parent</artifactId>
        <version>\${version}</version>
        <relativePath>../parent/pom.xml</relativePath>
    </parent>

    <artifactId>portal</artifactId>
    <packaging>war</packaging>

    <properties>
        <work.dir>\${project.build.directory}/\${project.build.finalName}</work.dir>

        <project.build.sourceEncoding>${project.build.sourceEncoding}</project.build.sourceEncoding>
        <project.reporting.outputEncoding>${project.reporting.outputEncoding}</project.reporting.outputEncoding>

        <!-- Backbase module versions -->
        <portal.bom.version>${portal.bom.version}</portal.bom.version>
        <portal.server.version>${portal.server.version}</portal.server.version>
        <portal.client.version>${portal.client.version}</portal.client.version>
        <portal.dashboard.version>${portal.dashboard.version}</portal.dashboard.version>
        <portal.mobile.version>${portal.mobile.version}</portal.mobile.version>

        <targeting.version>${targeting.version}</targeting.version>
        <launchpad.version>${launchpad.version}</launchpad.version>

        <!-- Mosaic module versions -->
        <mosaic.tools.version>${mosaic.tools.version}</mosaic.tools.version>

        <dashboard.start>&lt;!-- Start Dashboard Portal Import &gt;--></dashboard.start>
        <dashboard.end>&lt;!-- End Dashboard Portal Import &gt;--></dashboard.end>

        <!-- Folder where H2 and binary data is stored-->
        <portal.data.dir>\${project.basedir}/data</portal.data.dir>

        <!--Launchpad settings-->
        <launchpad.frontend>false</launchpad.frontend>
        <launchpad.edition>${launchpad.edition}</launchpad.edition>

        <!-- EH cache kill-switch-->
        <ehcache.disabled>false</ehcache.disabled>
    </properties>

    <repositories>
        <repository>
            <id>repo.backbase.com</id>
            <url>https://repo.backbase.com/repo/</url>
        </repository>
    </repositories>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.backbase.portal</groupId>
                <artifactId>portal-bom</artifactId>
                <version>${portal.bom.version}</version>
                <scope>import</scope>
                <type>pom</type>
            </dependency>
            <dependency>
                <groupId>com.sun.xml.fastinfoset</groupId>
                <artifactId>FastInfoset</artifactId>
                <version>1.2.12</version>
                <exclusions>
                    <exclusion>
                        <groupId>javax.xml.bind</groupId>
                        <artifactId>jsr173_api</artifactId>
                    </exclusion>
                </exclusions>
            </dependency>
            <!-- Statics sub-modules-->
            <dependency>
                <groupId>\${groupId}</groupId>
                <artifactId>launchpad-theme</artifactId>
                <version>\${version}</version>
            </dependency>
            <dependency>
                <groupId>com.backbase.launchpad</groupId>
                <artifactId>launchpad-widgets</artifactId>
                <version>\${launchpad.version}</version>
                <type>war</type>
                <classifier>\${launchpad.edition}</classifier>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <dependencies>
        <!-- Backbase core modules -->
        <dependency>
            <groupId>com.backbase.portal.foundation</groupId>
            <artifactId>presentation</artifactId>
            <version>\${portal.server.version}</version>
        </dependency>
        <dependency>
            <groupId>com.backbase.launchpad</groupId>
            <artifactId>mashup-camel-core</artifactId>
            <version>\${launchpad.version}</version>
        </dependency>
        <dependency>
            <groupId>com.backbase.services.mashup</groupId>
            <artifactId>ptc-core</artifactId>
            <version>\${portal.server.version}</version>
        </dependency>
        <dependency>
            <groupId>com.backbase.services.mashup</groupId>
            <artifactId>backbase.com.2011.ice</artifactId>
            <version>\${portal.server.version}</version>
        </dependency>
        <dependency>
            <groupId>com.backbase.services.mashup</groupId>
            <artifactId>backbase.com.2012.aurora</artifactId>
            <version>\${portal.server.version}</version>
        </dependency>
        <dependency>
            <groupId>com.backbase.portal.frontend</groupId>
            <artifactId>portal</artifactId>
            <version>\${portal.client.version}</version>
            <classifier>min</classifier>
            <type>js</type>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.backbase.portal.targeting</groupId>
            <artifactId>connectorframework-local</artifactId>
            <exclusions>
                <exclusion>
                    <groupId>com.backbase.portal.targeting</groupId>
                    <artifactId>connectorframework-resources</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.apache.camel</groupId>
                    <artifactId>camel-spring</artifactId>
                </exclusion>
            </exclusions>
            <version>\${targeting.version}</version>
        </dependency>
        <!-- REMOTE TARGETING START
        <dependency>
            <groupId>com.backbase.portal.targeting</groupId>
            <artifactId>connectorframework-remote</artifactId>
            <exclusions>
                <exclusion>
                    <groupId>com.backbase.portal.targeting</groupId>
                    <artifactId>connectorframework-resources</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.apache.camel</groupId>
                    <artifactId>camel-spring</artifactId>
                </exclusion>
            </exclusions>
            <version>${targeting.version}</version>
        </dependency>
        REMOTE TARGETING STOP -->
        <dependency>
            <groupId>com.backbase.portal.targeting</groupId>
            <artifactId>tracking</artifactId>
            <version>\${targeting.version}</version>
        </dependency>

        <!-- Backbase third party -->
        <dependency>
            <groupId>com.backbase.thirdparty</groupId>
            <artifactId>jquery</artifactId>
            <version>1.6.1</version>
            <classifier>min</classifier>
            <type>js</type>
            <scope>provided</scope>
        </dependency>

        <!-- Spring Security -->
        <dependency>
            <groupId>org.springframework.security</groupId>
            <artifactId>spring-security-taglibs</artifactId>
        </dependency>

        <!-- default authentication plugin -->
        <dependency>
            <groupId>com.backbase.portal.foundation</groupId>
            <artifactId>security-portalserver</artifactId>
            <version>\${portal.server.version}</version>
        </dependency>

        <!-- Launchpad -->
        <dependency>
            <groupId>com.backbase.launchpad</groupId>
            <artifactId>launchpad-authentication</artifactId>
            <version>\${launchpad.version}</version>
        </dependency>
        <dependency>
            <groupId>com.backbase.launchpad</groupId>
            <artifactId>launchpad-targeting</artifactId>
            <version>\${launchpad.version}</version>
        </dependency>

        <!-- Required for FakeAuthenitcationProvider -->
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>servlet-api</artifactId>
            <version>2.4</version>
            <scope>provided</scope>
        </dependency>

        <!-- testing -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>${junit.version}</version>
            <scope>test</scope>
        </dependency>

        <!-- logging -->
        <dependency>
            <groupId>org.codehaus.groovy</groupId>
            <artifactId>groovy-all</artifactId>
            <version>${groovy.version}</version>
        </dependency>
    </dependencies>

    <build>
        <finalName>\${project.artifactId}</finalName>

        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>false</filtering>
                <excludes>
                    <exclude>**/import/**</exclude>
                </excludes>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
                <includes>
                    <include>**/import/**</include>
                </includes>
            </resource>
        </resources>
        <testResources>
            <testResource>
                <directory>configuration</directory>
                <filtering>true</filtering>
                <targetPath>configuration</targetPath>
            </testResource>
        </testResources>

        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-dependency-plugin</artifactId>
                    <version>2.3</version>
                </plugin>
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>sql-maven-plugin</artifactId>
                    <version>1.4</version>
                </plugin>
            </plugins>
        </pluginManagement>

        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.1</version>
                <configuration>
                    <source>${java.target.version}</source>
                    <target>${java.target.version}</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>properties-maven-plugin</artifactId>
                <version>1.0-alpha-2</version>
                <executions>
                    <execution>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>write-project-properties</goal>
                        </goals>
                        <configuration>
                            <outputFile>\${project.build.outputDirectory}/profile.properties</outputFile>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>include-js-dependencies</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>com.backbase.portal.frontend</groupId>
                                    <artifactId>portal</artifactId>
                                    <type>js</type>
                                    <classifier>min</classifier>
                                    <outputDirectory>\${work.dir}/static/lib/</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.backbase.thirdparty</groupId>
                                    <artifactId>jquery</artifactId>
                                    <type>js</type>
                                    <classifier>min</classifier>
                                    <outputDirectory>\${work.dir}/static/lib/</outputDirectory>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                    <execution>
                        <id>unpack-launchpad-bundle</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <!-- Uncomment to include demo services -->
                                <!--
                                <artifactItem>
                                    <groupId>com.backbase.launchpad</groupId>
                                    <artifactId>demo-services</artifactId>
                                    <type>war</type>
                                    <outputDirectory>${project.basedir}/target</outputDirectory>
                                    <destFileName>demo-services.war</destFileName>
                                </artifactItem>
                                -->
                                <artifactItem>
                                    <groupId>com.backbase.launchpad</groupId>
                                    <artifactId>launchpad-widgets</artifactId>
                                    <type>war</type>
                                    <classifier>${launchpad.edition}</classifier>
                                    <outputDirectory>\${project.build.directory}/launchpad</outputDirectory>
                                    <destFileName>launchpad.war</destFileName>
                                    <excludes>META-INF</excludes>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.eclipse.jetty</groupId>
                <artifactId>jetty-maven-plugin</artifactId>
                <version>${jetty.plugin.version}</version>
                <configuration>
                    <stopKey>foo</stopKey>
                    <stopPort>${portal.port.stop}</stopPort>
                    <scanIntervalSeconds>1</scanIntervalSeconds>
                    <jettyXml>\${project.build.testOutputDirectory}/configuration/jetty/jetty.xml</jettyXml>
                    <webAppConfig>
                        <defaultsDescriptor>\${project.build.testOutputDirectory}/configuration/jetty/webdefaults.xml</defaultsDescriptor>
                        <contextPath>/\${project.build.finalName}</contextPath>
                        <resourceBases>
                            <resourceBase>\${project.basedir}/src/main/webapp</resourceBase>
                            <resourceBase>\${work.dir}</resourceBase>
                        </resourceBases>
                        <allowDuplicateFragmentNames>true</allowDuplicateFragmentNames>
                    </webAppConfig>
                    <httpConnector>
                        <port>${portal.port}</port>
                    </httpConnector>
                    <contextHandlers>
                        <!-- Uncomment to include demo services -->
                        <!--
                        <contextHandler implementation="org.eclipse.jetty.webapp.WebAppContext">
                            <war>${project.basedir}/target/demo-services.war</war>
                            <contextPath>/demo-services</contextPath>
                        </contextHandler>
                        -->
                        <contextHandler implementation="org.eclipse.jetty.webapp.WebAppContext">
                            <contextPath>/launchpad</contextPath>
                            <resourceBase>\${project.build.directory}/launchpad</resourceBase>
                        </contextHandler>
                    </contextHandlers>
                    <systemProperties>
                        <!--<systemProperty>
                            <name>PORTALSERVER_PROXY_URL</name>
                            <value>http://localhost:8082/mashupservices-webapp/proxy</value>
                        </systemProperty>-->
                        <systemProperty>
                            <name>portalserver.language</name>
                            <value>en</value>
                        </systemProperty>
                        <systemProperty>
                            <name>net.sf.ehcache.disabled</name>
                            <value>\${ehcache.disabled}</value>
                        </systemProperty>
                    </systemProperties>
                    <reload>manual</reload>
                </configuration>
                <dependencies>
                    <dependency>
                        <groupId>com.mchange</groupId>
                        <artifactId>c3p0</artifactId>
                        <version>0.9.2.1</version>
                        <scope>runtime</scope>
                    </dependency>
                    <dependency>
                        <groupId>com.h2database</groupId>
                        <artifactId>h2</artifactId>
                        <version>1.3.154</version>
                        <scope>runtime</scope>
                    </dependency>
                </dependencies>
                <executions>
                    <execution>
                        <id>start-jetty</id>
                        <phase>pre-integration-test</phase>
                        <goals>
                            <goal>start</goal>
                        </goals>
                        <configuration>
                            <scanIntervalSeconds>0</scanIntervalSeconds>
                            <daemon>true</daemon>
                            <skip>\${skipTests}</skip>
                        </configuration>
                    </execution>
                    <execution>
                        <id>stop-jetty</id>
                        <phase>post-integration-test</phase>
                        <goals>
                            <goal>stop</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.tomcat.maven</groupId>
                <artifactId>tomcat7-maven-plugin</artifactId>
                <!-- or if you want to use tomcat 6.x
                <artifactId>tomcat6-maven-plugin</artifactId>
                -->
                <version>${tomcat.plugin.version}</version>
                <configuration>
                    <!-- http port -->
                    <port>${portal.port}</port>
                    <!--<tomcat-url>http://localhost:8080/manager/html</tomcat-url>-->
                    <!-- application path always starts with /-->
                    <!--<path>/\${project.build.finalName}</path>-->
                    <path>/portalserver</path>
                    <!-- optional, needed only if you want to use a preconfigured server.xml file -->
                    <!-- <serverXml>\${project.build.testOutputDirectory}/configuration/tomcat/server.xml</serverXml>-->
                    <!-- optional path to a context file -->
                    <contextFile>\${project.build.testOutputDirectory}/configuration/tomcat/context.xml</contextFile>
                    <!-- optional system propoerties you want to add -->
                    <systemProperties>
                        <!--<PORTALSERVER_PROXY_URL>http://localhost:8082/mashupservices-webapp/prox</PORTALSERVER_PROXY_URL>-->
                        <portalserver.language>en</portalserver.language>
                    </systemProperties>
                    <!-- if you want to use test dependencies rather than only runtime -->
                    <useTestClasspath>false</useTestClasspath>
                    <!-- optional if you want to add some extra directories into the classloader -->
                    <additionalClasspathDirs>
                        <additionalClasspathDir></additionalClasspathDir>
                    </additionalClasspathDirs>
                    <addContextWarDependencies>true</addContextWarDependencies>
                    <addWarDependenciesInClassloader>true</addWarDependenciesInClassloader>
                    <warSourceDirectory>\${project.build.directory}/\${project.build.finalName}/</warSourceDirectory>
                </configuration>
                <!-- For any extra dependencies needed when running embedded Tomcat (not WAR dependencies) add them below -->
                <dependencies>
                    <dependency>
                        <groupId>javax.mail</groupId>
                        <artifactId>mail</artifactId>
                        <version>${javax.mail.version}</version>
                    </dependency>
                    <dependency>
                        <groupId>com.h2database</groupId>
                        <artifactId>h2</artifactId>
                        <version>1.3.154</version>
                    </dependency>
                </dependencies>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.17</version>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-failsafe-plugin</artifactId>
                <version>2.17</version>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>create-database</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>sql-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>createPortalFoundation</id>
                                <phase>clean</phase>
                                <goals>
                                    <goal>execute</goal>
                                </goals>
                                <configuration>
                                    <driver>org.h2.Driver</driver>
                                    <url>jdbc:h2:file:\${portal.data.dir}/portalFoundation</url>
                                    <username>sa</username>
                                    <password></password>
                                    <srcFiles>
                                        <srcFile>\${project.basedir}/configuration/scripts/foundation/schema.ddl</srcFile>
                                        <srcFile>\${project.basedir}/configuration/scripts/foundation/default-foundation-data-blank.sql</srcFile>
                                        <srcFile>\${project.basedir}/configuration/scripts/foundation/audit_schema.ddl</srcFile>
                                    </srcFiles>
                                </configuration>
                            </execution>
                        </executions>
                        <dependencies>
                            <dependency>
                                <groupId>com.h2database</groupId>
                                <artifactId>h2</artifactId>
                                <version>1.3.154</version>
                            </dependency>
                        </dependencies>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>clean-database</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>sql-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>cleanPortalFoundation</id>
                                <phase>clean</phase>
                                <goals>
                                    <goal>execute</goal>
                                </goals>
                                <configuration>
                                    <driver>org.h2.Driver</driver>
                                    <url>jdbc:h2:file:\${portal.data.dir}/portalFoundation</url>
                                    <username>sa</username>
                                    <password></password>
                                    <srcFiles>
                                        <srcFile>\${project.basedir}/configuration/scripts/foundation/schema.ddl</srcFile>
                                        <srcFile>\${project.basedir}/configuration/scripts/foundation/default-foundation-data-blank.sql</srcFile>
                                        <srcFile>\${project.basedir}/configuration/scripts/foundation/audit_schema.ddl</srcFile>
                                    </srcFiles>
                                </configuration>
                            </execution>
                        </executions>
                        <dependencies>
                            <dependency>
                                <groupId>com.h2database</groupId>
                                <artifactId>h2</artifactId>
                                <version>1.3.154</version>
                            </dependency>
                        </dependencies>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>jboss</id>
            <properties>
                <skipTests>true</skipTests>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>com.backbase.portal.targeting</groupId>
                    <artifactId>tracking</artifactId>
                    <version>${targeting.version}</version>
                </dependency>
                <dependency>
                    <groupId>org.apache.camel</groupId>
                    <artifactId>camel-core</artifactId>
                    <version>${camel.version}</version>
                </dependency>
                <dependency>
                    <groupId>org.apache.camel</groupId>
                    <artifactId>camel-spring-javaconfig</artifactId>
                    <version>${camel.version}</version>
                </dependency>
                <dependency>
                    <groupId>org.apache.camel</groupId>
                    <artifactId>camel-spring</artifactId>
                    <version>${camel.version}</version>
                    <exclusions>
                        <exclusion>
                            <groupId>org.springframework</groupId>
                            <artifactId>spring-aop</artifactId>
                        </exclusion>
                        <exclusion>
                            <groupId>org.springframework</groupId>
                            <artifactId>spring-tx</artifactId>
                        </exclusion>
                    </exclusions>
                </dependency>
            </dependencies>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-war-plugin</artifactId>
                        <version>2.4</version>
                        <configuration>
                            <packagingExcludes>
                                WEB-INF/lib/stax-api*.jar,
                                WEB-INF/lib/xercesImpl-*.jar,
                                WEB-INF/lib/camel-core-2.6*.jar,
                                WEB-INF/lib/camel-spring-2.6*.jar,
                                WEB-INF/lib/camel-spring-javaconfig-2.6*.jar,
                                WEB-INF/lib/groovy-all*.jar
                            </packagingExcludes>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>no-dashboard</id>
            <activation>
                <!-- Activation by a property. Run with -Dwithout-dashboard -->
                <property>
                    <name>without-dashboard</name>
                </property>
            </activation>
            <properties>
                <dashboard.start>&lt;!--</dashboard.start>
                <dashboard.end>--&gt;</dashboard.end>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>com.backbase.portal</groupId>
                    <artifactId>portalclient</artifactId>
                    <version>\${portal.dashboard.version}</version>
                    <classifier>min</classifier>
                    <type>zip</type>
                </dependency>
                <dependency>
                    <groupId>com.backbase.portal</groupId>
                    <artifactId>dashboard</artifactId>
                    <version>\${portal.dashboard.version}</version>
                    <classifier>core-min</classifier>
                    <type>zip</type>
                </dependency>
                <dependency>
                    <groupId>com.backbase.portal.manager</groupId>
                    <artifactId>importdata</artifactId>
                    <classifier>default</classifier>
                    <version>\${portal.dashboard.version}</version>
                    <type>zip</type>
                </dependency>
                <dependency>
                    <groupId>com.backbase.client</groupId>
                    <artifactId>backbase-client</artifactId>
                    <classifier>min</classifier>
                    <version>\${portal.client.version}</version>
                    <type>zip</type>
                </dependency>
            </dependencies>
            <build>
                <resources>
                    <resource>
                        <directory>src/main/resources</directory>
                    </resource>
                    <resource>
                        <directory>src/main/coreResources</directory>
                    </resource>
                </resources>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>unpack-zip-dependencies</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>unpack</goal>
                                </goals>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>com.backbase.portal</groupId>
                                            <artifactId>portalclient</artifactId>
                                            <type>zip</type>
                                            <classifier>min</classifier>
                                            <outputDirectory>\${work.dir}/</outputDirectory>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>com.backbase.portal</groupId>
                                            <artifactId>dashboard</artifactId>
                                            <type>zip</type>
                                            <classifier>core-min</classifier>
                                            <outputDirectory>\${work.dir}/</outputDirectory>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>com.backbase.portal.manager</groupId>
                                            <artifactId>importdata</artifactId>
                                            <classifier>default</classifier>
                                            <type>zip</type>
                                            <outputDirectory>\${work.dir}/</outputDirectory>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>com.backbase.client</groupId>
                                            <artifactId>backbase-client</artifactId>
                                            <classifier>min</classifier>
                                            <type>zip</type>
                                            <outputDirectory>
                                                \${work.dir}/static/lib/bcf/5_0_0/
                                            </outputDirectory>
                                        </artifactItem>
                                    </artifactItems>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>with-dashboard</id>
            <activation>
                <!-- Activation by absence of a property. Run normally, without -Dwithout-dashboard -->
                <property>
                    <name>!without-dashboard</name>
                </property>
            </activation>
            <properties>
                <dashboard.start>&lt;!-- Start Portal Dashboard Import --&gt;</dashboard.start>
                <dashboard.end>&lt;!-- End Portal Dashboard Import --&gt;</dashboard.end>
            </properties>
            <dependencies>
                <dependency>
